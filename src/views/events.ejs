<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Events</title>
  <link rel="stylesheet" href="/css/cards.css" />
  
</head>
<body>
  <!-- views/events.ejs -->
  <header>
    <div class="logo">
      <span><img src="images/logo.png" class="logo-img" alt="" />ಸರಸ್ವತಿ ಕಲಾ ಟ್ರಸ್ಟ್</span>
    </div>
    <div class="menu-toggle" id="menu-toggle"><span></span><span></span><span></span></div>
     <nav>
        <ul id="nav-list">
          <li><a href="/">ಹೋಮ್</a></li>
          <li><a href="/about">ನಮ್ಮ ಬಗ್ಗೆ </a></li>
          <li><a href="/events">ಕಾರ್ಯಕ್ರಮಗಳು </a></li>
          <li><a href="/gallery">ಚಿತ್ರಭಂಢಾರ</a></li>
          <li><a href="/contact">ಸಂಪರ್ಕಿಸಿ </a></li>
        </ul>
    </nav>
  </header>

  <main class="cards-container">
    <% events.forEach((event, idx) => { %>
      <a href="/events/<%= event.slug %>" class="card1">

        <% if (event.media && event.media.length) { %>
          <div class="card-carousel" data-carousel-id="c<%= idx %>">
            <button class="carousel-btn prev">‹</button>
            <div class="slides">
              <% event.media.forEach(m => { %>
                <img
                  src="<%= m.url %>"
                  alt="<%= event.name %>"
                  class="card1-img slide"
                />
              <% }) %>
            </div>
            <button class="carousel-btn next">›</button>
          </div>
        <% } else if (event.imageUrl) { %>
          <img
            src="<%= event.imageUrl %>"
            alt="<%= event.name %>"
            class="card1-img"
          />
        <% } else { %>
          <div class="card1-img placeholder">No Image</div>
        <% } %>

        <div class="card1-body">
          <h3 class="card1-title"><%= event.name %></h3>
          <p class="card1-date"><%= event.date.toDateString() %></p>
          <p class="card1-place"><%= event.place %></p>
        </div>
      </a>
    <% }) %>
  </main>

<script src="/js/carousel.js"></script>

</body>
</html>
